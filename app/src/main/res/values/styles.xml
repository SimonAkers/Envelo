<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundTint">?android:colorPrimary</item>
        <item name="android:tint">?android:colorBackground</item>
        <item name="elevation">@dimen/fab_elevation</item>
        <item name="borderWidth">0dp</item>
        <item name="maxImageSize">@dimen/fab_max_image_size</item>
    </style>

    <style name="ToolbarTop">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/toolbar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="android:elevation">@dimen/elevation_normal</item>
    </style>

    <style name="ToolbarTop.Envelo" parent="ToolbarTop">
        <item name="navigationIcon">@drawable/envelo_tb</item>
    </style>

    <style name="NumberKeypadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_keypad_btn_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="NumberKeypadTextButton" parent="NumberKeypadButton">
        <item name="android:textSize">40sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NumberKeypadRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="SelectorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/edge_margin</item>
        <item name="android:layout_marginEnd">@dimen/edge_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/highlight</item>
    </style>
</resources>